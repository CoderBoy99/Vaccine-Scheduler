<%- include('./header.ejs') %>

<div class="container forget-password">
  <div class="row">
    <div class="col-md-12 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="text-center">
            <img src="/stylesheets/unsubscribe.png" alt="vaccine" border="0" />
            <!-- <img src="/stylesheets/vaccine.png" alt="vaccine" border="0" /> -->
            <h2 class="text-center">Vaccine Scheduler</h2>
            <p>
              Got vaccinated  <i class="fas fa-thumbs-up"></i> <br />
              Refer others to make India COVID free
            </p>
            <form
              id="deleteFormId"
              action="/delete"
              autocomplete="off"
              class="form"
              method="POST"
            >
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"
                    ><i class="glyphicon glyphicon-envelope color-blue"></i
                  ></span>
                  <input
                    id="email"
                    name="email"
                    placeholder="Email"
                    class="form-control"
                    type="email"
                    required
                  />
                </div>
              </div>
              <div class="form-group">
                <input
                  name="btnForget"
                  class="btn btn-lg btn-primary btn-block btnForget"
                  type="submit"
                  value="Unsubscribe"
                />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

 <%- include('./footer.ejs') %>