    <%- include('./header.ejs') %>


     

    <div class="container forget-password">
      <div class="row">
        <div class="col-md-12 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="text-center">
                <img src="/stylesheets/vaccine.png" alt="vaccine" border="0" />
                <h2 class="text-center">Vaccine Scheduler</h2>
                <p>Get your notification for the vaccine !!</p>
                <form
                  id="form_id"
                  action="/submit"
                  autocomplete="off"
                  class="form"
                  method="POST"
                >
                  <div class="form-group">
                    <div class="form-group">
                      <div class="input-group">
                        <span class="input-group-addon"
                          ><i
                            class="glyphicon glyphicon-envelope color-blue"
                          ></i
                        ></span>
                        <input
                          id="email"
                          name="email"
                          placeholder="Email"
                          class="form-control"
                          type="email"
                          required
                        />
                      </div>
                    </div>
                    <div class="input-group">
                      <select
                        id="states_options"
                        class="form-control"
                        required
                      ></select>
                    </div>

                    <div class="input-group">
                      <select
                        class="form-control"
                        id="city_options"
                        name="city_id"
                        required
                      >
                        <option hidden disabled selected value>
                          -- Select city --
                        </option>
                      </select>
                    </div>

                    <div class="input-group">
                      <select
                        name="vaccine_name"
                        class="form-control"
                        id="vaccine"
                        required
                      >
                        <option hidden disabled selected value>
                          -- Select vaccine --
                        </option>
                        <option value="COVISHIELD">Covishield</option>
                        <option value="COVAXIN">Covaxin</option>
                        <option value="SPUTNIK V">Sputnik V</option>
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <input
                      name="btnForget"
                      class="btn btn-lg btn-primary btn-block btnForget"
                      type="submit"
                      value="Subscribe"
                    />
                  </div>
                </form>
                <div id="formFooter">
                  <a class="underlineHover" href="/unsubscribe">Unsubscribe?</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
 

    <%- include('./footer.ejs') %>